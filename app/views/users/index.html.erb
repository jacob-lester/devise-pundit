<div class="container">
  <div class="row">
    <h3>Users</h3>
    <div class="column">
      <table class="table table-hover">
        <thead class="thead center">
          <tr>
            <th class="align-middle">Name</th>
            <th class="align-middle">Email</th>
            <th class="align-middle">Role</th>
            
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <%= render user %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
